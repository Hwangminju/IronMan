<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mjhwa.ironman"
    android:versionCode="1"
    android:versionName="1.0.1">

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bionic_arm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bionic_arm"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.LearnActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".views.MainActivity"
            android:label="@string/title_activity_main" />

        <activity android:name=".views.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".bluetooth.DeviceListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Select a device to connect"
            android:theme="@android:style/Theme.Dialog" />

        <activity
            android:name=".ble.DeviceScanActivity"
            android:label="DeviceScanActivity" />

        <activity
            android:name=".ble.DeviceControlActivity"
            android:label="DeviceControlActivity" />

        <!-- Service -->
        <service
            android:name=".service.BTCTemplateService"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:icon="@drawable/ic_launcher"
            android:label="@string/service_name" />

        <!-- Broadcast receiver -->
        <receiver android:name=".service.ServiceMonitoring$ServiceMonitoringBR" />

        <activity
            android:name=".views.SignActivity"
            android:label="@string/title_activity_signup" />
        <activity
            android:name=".views.NormalActivity"
            android:label="@string/title_activity_normal" />
        <activity
            android:name=".views.BaristaActivity"
            android:label="@string/title_activity_barista">
        </activity>
        <activity
            android:name=".ble.BLEActivity"
            android:label="@string/title_activity_ble">
        </activity>
    </application>

</manifest>